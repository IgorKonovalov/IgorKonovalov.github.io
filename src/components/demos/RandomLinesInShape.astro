<div class="demo-container">
  <div class="controls">
    <div class="controls-row">
      <label>SVG width: <input type="text" id="svgWidth" value="740" /></label>
      <label>SVG height: <input type="text" id="svgHeight" value="340" /></label
      >
      <label>Lines: <input type="text" id="lines" value="1" /></label>
    </div>
    <div class="controls-row">
      <label
        >BG color: <input type="color" id="bgColor" value="#EDEDED" /></label
      >
      <label
        >Line color: <input
          type="color"
          id="lineColor"
          value="#101010"
        /></label
      >
    </div>
    <div class="controls-row">
      <label
        >Figure: <select id="figure_select">
          <option value="HEX">Hex</option>
          <option value="Triangle">Triangle</option>
          <option value="Square">Square</option>
        </select></label
      >
      <label>Size: <input type="text" id="sizeValue" value="60" /></label>
      <label>Offset: <input type="text" id="offsetValue" value="5" /></label>
    </div>
    <button type="button" class="button-primary" id="generate"
      >Generate Sprite</button
    >
  </div>
  <div id="Figure"></div>
  <button id="download">Download SVG</button>
</div>

<style>
  .demo-container {
    max-width: var(--content-width);
    margin: 1.5rem 0;
  }
  .controls-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }
  .controls-row label {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    white-space: nowrap;
  }
  .controls input[type='text'] {
    width: 60px;
  }
  .tile polygon {
    pointer-events: visiblePainted;
    stroke-width: 1.5;
  }
  .tile line {
    stroke-width: 1.5;
  }
  .displaynone {
    display: none;
  }
  #Figure {
    margin: 1rem 0;
  }
  #Figure :global(svg) {
    max-width: 100%;
    height: auto;
  }
</style>

<script>
  import '../../scripts/demos/random-lines-in-shape.js';
</script>
